  display: flex;
  flex-direction: row;
  
  align-items: center;
  justify-content: space-between;
  background: white;
  margin: 20rpx 0;
  padding: 20rpx 0;

}

.order-item{

  width: 33.3%;
  text-align: center;

}
.order-item text{

  display: block;
  
  color: #333;

}

