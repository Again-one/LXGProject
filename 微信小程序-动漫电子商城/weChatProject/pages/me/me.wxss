.userinfo{
  
background-color: red;
 width: 100%;
 height: 240rpx;
 flex-direction: column;
 font-size: 30rpx;
 color:fuchsia;
 padding-top: 30rpx;
 align-items: center;
 display: flex;
}
.userinfo image{
 
  border-radius: 50rpx;
  width: 100rpx;
  height: 100rpx;
  
  display: block;
  
}

