.summary{

  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background: white;
  margin: 20rpx 0;

}
.summary ,title{

  font-size: 34rpx;
  margin:10rpx;
  line-height: 46rpx;

}
.summary .price{

  color: #f60;
  margin: 10rpx;

}
.footer{

  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  position: fixed;
  bottom: 0;
  background-color: #fff

}
.add-cart{
  float: right;
  width: 350rpx;
  height: 100rpx;
  background: #f60;
  color: white;
  font-size: 36rpx;
  border: 0;
  

}
.opt-buttons{

  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 100%;

}
.button-group{

  display: flex;
  flex-direction: column;
  color:gainsboro;
  font-size: 20rpx;
}
.button-group image{
  width: 42rpx;
  height: 42rpx;
   margin: 12rpx auto;

}
.button-group i{
  position: absolute;
  right:300rpx;
  color: red;
  
}
.detail{
  display: block;
  font-size: 25rpx;
  color:gainsboro;
  line-height: 25px;
  padding-right: 10rpx;
  padding-left: 10rpx;
  padding-bottom: 100rpx;
}
.detail .xq{
  width: 100%;
  height: 60rpx;
  font-size: 40rpx;
  margin:0 10rpx;
  border-bottom: 5rpx solid #eee;
}