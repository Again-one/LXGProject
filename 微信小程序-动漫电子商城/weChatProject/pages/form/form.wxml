<view class='container'>
  <form bindsubmit='bindSave'>
    <view class="box">
      <view class='row'>
        <view class='label'>
          联系人
        </view>
        <view class='label2'>
          <input name="link" placeholder='姓名'></input>
        </view>
        
      </view>
      <view class='row'>
        <view class='label'>
          手机号码
        </view>
        <view class='label2'>
          <input name="mobile" placeholder='11位手机号码'></input>
        </view>
        
      </view>
      <view class='row'>
        <view class='label'>
          收货地址
        </view>
        <view class='label2'>
          <input name="city" placeholder='省、市、区'></input>
        </view>
        
      </view>
      <view class='row'>
        <view class='label'>
          详细地址
        </view>
        <view class='label2'>
          <input name="address" placeholder='街道门牌信息'></input>
        </view>
        
      </view>
      <view class='row'>
        <view class='label'>
          邮政编码
        </view>
        <view class='label2'>
          <input name="code" ></input>
        </view>
        
      </view>
      
    </view>
    <button class='save' type="warn" formType='submit'>保存</button>
    <button class='cancel'>取消</button>
  </form>
</view>