page{

  background: #fbe8e8;

}

.my_image{

  margin: 60px;
  text-align: center;


}
.my_image image{
  display: block;
  width:250px;
  height:180px;
  margin: 0 auto;
  

}
.my_image text{

  display: block;
  color: #E6E6E6;
  font-size: 15px;
  

}
.container{
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
}
.carts-list{
 
 margin-bottom: 110rpx;
}
.goods-container{
  position: relative;
  width: 100%;
  height: 90px;
}
.goods-item icon {
	margin-top: 60rpx;
	margin-right: 20rpx;
}
.goods-item{
  display: flex;
  flex-direction: row;
  
  height: 150rpx;
  width: 100%;
  border-bottom: 1px solid #eee;
  padding:30rpx 0;
  margin-right: 40rpx;
  position: absolute;
  top:0;
  left:0;
  background: white;
  z-index: 99;
}
.goods-image{
  width: 150rpx;
  height: 150rpx;
}
.goods-text{
  margin-left: 10rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goods-title{
  font-size: 28rpx;
  color: #444;
  line-height: 38rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  
}
.goods-subtitle{
  font-size: 25rpx;
  color: darkgray;
  padding: 0 20rpx;
  flex-direction: row;
  display: flex;
  justify-content: space-between
}
.goods-price{
  color: #f60;
  font-size: 14px;
  line-height: 22px;

}
.sum{
  border: 1px solid #ccc;
  border-radius: 3px;
  width: 70px;
  height: 26px;
  margin: 0 auto;
}
.sum input{
  color: black;
  float: left;
  margin: 0 auto;
  width: 30px;
  height: 26px;
  text-align: center;
  font-size: 12px;
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
}
.sum text{
  float: left;
  width: 19px;
  line-height: 26px;
  text-align: center;
  
}
.sum .normal{
  color: black;
}
.sum .disabled{
  color: #ccc;
}
.delete-button{
  width: 60px;
  font-size: 16px;
  height: 99%;
  line-height: 90px;
  border: 0;
  border-radius: 0;
  position: absolute;
  right: 0;
  top: 0;
}
.goods-footer{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  left:0;
  border-top: 1px solid #eee;
  background: white;
  z-index: 199;

}
.goods-footer icon {
	margin-left: 20rpx;
	display: block;
}
.goods-footer text {
	font-size: 30rpx;
	margin-left: 8rpx;
	
	display: block;
}
.select{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.goods-footer .button{
  line-height: 80rpx;
  text-align: center;
  width: 220rpx;
  height: 80rpx;
  background: #f60;
  border: 1 solid red;
  color: white;
 

}